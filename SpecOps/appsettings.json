{
  "AppSettings": {
    "SecurityPolicies": {
      "AdminGroups": [ "mydomain\\abc", "mydomain\\def" ],
      "UserGroups": [ "mydomain\\uvw", "mydomain\\xyz" ]
    },
    "OutputLevels": [
      { "Name": "Data", "CssClass": "text-info" },
      { "Name": "Error", "CssClass": "text-danger" },
      { "Name": "Warning", "CssClass": "text-warning" },
      { "Name": "Info", "CssClass": "text-light" },
      { "Name": "Progress", "CssClass": "text-success" },
      { "Name": "Verbose", "CssClass": "text-teal" },
      { "Name": "Debug", "CssClass": "text-primary" },
      { "Name": "System", "CssClass": "text-info" },
      { "Name": "Unknown", "CssClass": "text-warning" }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Exceptions", "Serilog", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "System": "Information",
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/SpecOps.txt",
                "rollingInterval": "Day"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithExceptionDetails" ],
    "Properties": {
      "Environment": "LocalDev"
    }
  }
}



